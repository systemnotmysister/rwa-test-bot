{
    "compilerOptions": {
      "jsx": "react-jsx",
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      
      "forceConsistentCasingInFileNames": true,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node"],
      "baseUrl": "./",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src", "global.d.ts" ],  // Исправь путь к директории src и global.d.ts
    "exclude": ["node_modules"]
  }
  